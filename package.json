{
  "name": "celerihealth",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "web": "pnpm --filter=@celeritaz/celerihealth-frontend dev",
    "api": "pnpm --filter=nest-api dev",
    "api:test": "pnpm --filter=nest-api test",
    "api:lint": "pnpm --filter=nest-api lint",
