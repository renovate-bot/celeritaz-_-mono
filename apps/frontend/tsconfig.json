{
  "extends": "@celeritaz/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@backend/*": ["../../api/backend/*"],
      "@ui/*": ["../../packages/ui/src/*"],
    },
    "types": ["vitest/globals"]
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
