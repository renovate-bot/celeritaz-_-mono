{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "target": "ES2017",
    "jsx": "preserve",
    "noEmit": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
